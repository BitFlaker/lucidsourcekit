<resources>
    <style name="Theme.LucidSourceKit.LCDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/creamy_blue</item>
        <item name="android:textColor">?attr/bright_text_color</item>
        <item name="priorityColor">@color/white</item>
        <item name="iconColor">@color/darker_white</item>
        <item name="bright_text_color">@color/white</item>
        <item name="darker_text_color">@color/darker_white_2x</item>
        <item name="button_primary">@color/dark_purple_blue</item>
        <item name="pin_background">@color/dark_purple_blue_transparent</item>
        <item name="inactivePageDot">@color/dark_blue</item>
        <item name="activePageDot">@color/lighter_blue</item>
        <item name="activeTabIcon">@color/creamy_blue</item>
        <item name="inactiveTabIcon">@color/light_gray</item>
        <item name="secondColor">@color/dark_blue_lighter</item>
        <item name="main_background_color">@color/mountain_dark_blue</item>
        <item name="background_stand_out">@color/mountain_dark_blue_lighter</item>
        <item name="colorError">@color/lighter_red</item>
        <item name="highlight_success">@color/darker_green</item>
        <item name="lightSelection">@color/clay_white</item>
        <item name="main_overview_graphic">@drawable/deep_night_mountains_lcdark</item>
    </style>

    <style name="Theme.LucidSourceKit.Amoled.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/creamy_blue</item>
        <item name="android:textColor">?attr/bright_text_color</item>
        <item name="priorityColor">@color/white</item>
        <item name="iconColor">@color/gray</item>
        <item name="bright_text_color">@color/white</item>
        <item name="darker_text_color">@color/darker_white_2x</item>
        <item name="button_primary">@color/dark_purple_blue</item>
        <item name="pin_background">@color/dark_purple_blue_transparent</item>
        <item name="inactivePageDot">@color/darker_gray</item>
        <item name="activePageDot">@color/lighter_blue</item>
        <item name="activeTabIcon">@color/creamy_blue</item>
        <item name="inactiveTabIcon">@color/light_gray</item>
        <item name="secondColor">@color/darker_gray</item>
        <item name="main_background_color">@color/black</item>
        <item name="background_stand_out">@color/dark_gray</item>
        <item name="colorError">@color/lighter_red</item>
        <item name="colorWarning">@color/lighter_orange</item>
        <item name="colorSuccess">@color/lighter_green</item>
        <item name="highlight_success">@color/darker_green</item>
        <item name="lightSelection">@color/clay_white</item>
        <item name="main_overview_graphic">@drawable/deep_night_mountains_amoled_dark</item>
    </style>





    <style name="Theme.LucidSourceKit.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_var</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_300</item>
        <item name="colorSecondaryVariant">@color/teal_var</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="backgroundColor">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorHint">@color/white_50p</item>

        <item name="tertiaryTextColor">@color/white_50p</item>
        <item name="secondaryTextColor">@color/white_70p</item>
        <item name="primaryTextColor">@color/white</item>

        <item name="slightElevated">@color/grayed_blue</item>
        <item name="slightElevated2x">@color/white_6p</item>
        <item name="colorDisabled">@color/background_brighter</item>
        <item name="colorPrimaryTranslucent">@color/prim_30p</item>
        <item name="colorError">@color/lighter_red</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorWarning">@color/lighter_orange</item>
        <item name="colorSuccess">@color/lighter_green</item>
        <item name="main_overview_graphic">@drawable/deep_night_mountains_new_dark</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog.Dark</item>
    </style>

    <style name="PopupMenu.Dark" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:itemBackground">@color/background_paper</item>
    </style>

    <style name="ThemedDialog.Dark" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="slightElevated">@color/white_40p</item>
        <item name="android:background">@color/background_paper</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="ThemedChipEntry.Dark" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="slightElevated">@color/white_40p</item>
        <item name="android:background">@color/white_40p</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/blue_500</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/blue_500</item>
    </style>

    <style name="Tooltip.Dark" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">?attr/slightElevated2x</item>
    </style>

    <!-- Bottom Sheet styles -->

    <style name="BottomSheetDialog.Dark" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:backgroundTint">@color/background</item>
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
        <item name="android:theme">@style/Theme.LucidSourceKit.Dark</item>
    </style>


    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
    </style>




    <style name="ThemedDialog.LCDark" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">?attr/background_stand_out</item>
        <item name="android:textColor">?attr/bright_text_color</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="ThemedDialog.Amoled.Dark" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">?attr/background_stand_out</item>
        <item name="android:textColor">?attr/bright_text_color</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="PopupMenu.LCDark" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">?attr/bright_text_color</item>
        <item name="android:itemBackground">?attr/background_stand_out</item>
    </style>
</resources>