<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".alarms.AlarmsManager">

    <LinearLayout
        android:id="@+id/ll_top_heading"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_alarms_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Alarms"
            android:textColor="?attr/primaryTextColor"
            android:textSize="20sp"
            android:textStyle="bold" />

<!--        <androidx.legacy.widget.Space-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="0dp"-->
<!--            android:layout_weight="1" />-->

        <!--        <ImageButton-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:background="@drawable/ripple_round"-->
        <!--            android:backgroundTint="?attr/backgroundColor"-->
        <!--            android:minWidth="48dp"-->
        <!--            android:minHeight="48dp"-->
        <!--            android:src="@drawable/ic_round_bolt_24"-->
        <!--            app:tint="?attr/secondaryTextColor" />-->

<!--        <ImageButton-->
<!--            android:id="@+id/btn_settings_clock"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginEnd="5dp"-->
<!--            android:background="@drawable/ripple_round"-->
<!--            android:backgroundTint="?attr/backgroundColor"-->
<!--            android:minWidth="48dp"-->
<!--            android:minHeight="48dp"-->
<!--            android:src="@drawable/ic_round_settings_24"-->
<!--            app:tint="?attr/secondaryTextColor" />-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_top_heading"
        android:layout_marginTop="6dp"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="?attr/backgroundColor"
            app:cardCornerRadius="@dimen/cardRadius"
            app:cardElevation="6dp"
            app:strokeColor="?attr/slightElevated"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <com.bitflaker.lucidsourcekit.clock.SleepClock
                    android:id="@+id/slp_clock"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="25dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <androidx.legacy.widget.Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Next alarm"
                            android:textAllCaps="true"
                            android:textColor="?attr/secondaryTextColor"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txt_next_alarm_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14:03"
                            android:textColor="?attr/primaryTextColor"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <androidx.legacy.widget.Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alarm in"
                            android:textAllCaps="true"
                            android:textColor="?attr/secondaryTextColor"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txt_next_alarm_time_to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15h 21m"
                            android:textColor="?attr/primaryTextColor"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <androidx.legacy.widget.Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="03:05 PM"
                android:textColor="?attr/primaryTextColor"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txt_current_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="06.06.2022"
                android:textColor="?attr/tertiaryTextColor"
                android:textSize="14sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_list_alarms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:layout_marginTop="15dp" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_round_add_24"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="?attr/colorPrimary"
        app:tint="@color/white"
        app:shapeAppearance="@style/FloatingShapeAppearanceOverlay"
        app:borderWidth="0dp"/>
</RelativeLayout>