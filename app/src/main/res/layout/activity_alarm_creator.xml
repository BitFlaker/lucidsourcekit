<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlarmCreator">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:src="@drawable/ic_round_close_24"
            android:background="@drawable/ripple_round"
            android:backgroundTint="?attr/backgroundColor"/>

        <com.bitflaker.lucidsourcekit.clock.SleepClock
            android:id="@+id/slp_clk_set_time"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bedtime"
                    android:textAllCaps="true"
                    android:textColor="?attr/secondaryTextColor"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22:43"
                    android:textAllCaps="true"
                    android:textColor="?attr/primaryTextColor"
                    android:textSize="28sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alarm"
                    android:textAllCaps="true"
                    android:textColor="?attr/secondaryTextColor"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05:58"
                    android:textAllCaps="true"
                    android:textColor="?attr/primaryTextColor"
                    android:textSize="28sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:divider="@drawable/divider_medium"
            android:showDividers="middle">

            <com.google.android.material.chip.Chip
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="Mo"
                android:includeFontPadding="false"
                android:textAlignment="center"
                app:chipBackgroundColor="@drawable/chip_background"
                app:chipCornerRadius="48dp"
                app:chipMinHeight="36dp"
                app:textStartPadding="0dp"
                app:textEndPadding="0dp"
                app:chipEndPadding="0dp"
                app:chipStartPadding="0dp"
                app:chipMinTouchTargetSize="0dp"
                style="@style/Widget.MaterialComponents.Chip.Choice"/>

            <com.google.android.material.chip.Chip
                android:layout_width="36dp"
                android:layout_height="36dp"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Tu"
                android:includeFontPadding="false"
                android:textAlignment="center"
                app:chipBackgroundColor="@drawable/chip_background"
                app:chipCornerRadius="48dp"
                app:chipMinHeight="48dp"
                app:textStartPadding="0dp"
                app:textEndPadding="0dp"
                app:chipEndPadding="0dp"
                app:chipStartPadding="0dp"
                app:chipMinTouchTargetSize="0dp"/>

            <com.google.android.material.chip.Chip
                android:layout_width="36dp"
                android:layout_height="36dp"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="We"
                android:includeFontPadding="false"
                android:textAlignment="center"
                app:chipBackgroundColor="@drawable/chip_background"
                app:chipCornerRadius="48dp"
                app:chipMinHeight="48dp"
                app:textStartPadding="0dp"
                app:textEndPadding="0dp"
                app:chipEndPadding="0dp"
                app:chipStartPadding="0dp"
                app:chipMinTouchTargetSize="0dp"/>

            <com.google.android.material.chip.Chip
                android:layout_width="36dp"
                android:layout_height="36dp"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Th"
                android:includeFontPadding="false"
                android:textAlignment="center"
                app:chipBackgroundColor="@drawable/chip_background"
                app:chipCornerRadius="48dp"
                app:chipMinHeight="48dp"
                app:textStartPadding="0dp"
                app:textEndPadding="0dp"
                app:chipEndPadding="0dp"
                app:chipStartPadding="0dp"
                app:chipMinTouchTargetSize="0dp"/>

            <com.google.android.material.chip.Chip
                android:layout_width="36dp"
                android:layout_height="36dp"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Fr"
                android:includeFontPadding="false"
                android:textAlignment="center"
                app:chipBackgroundColor="@drawable/chip_background"
                app:chipCornerRadius="48dp"
                app:chipMinHeight="48dp"
                app:textStartPadding="0dp"
                app:textEndPadding="0dp"
                app:chipEndPadding="0dp"
                app:chipStartPadding="0dp"
                app:chipMinTouchTargetSize="0dp"/>

            <com.google.android.material.chip.Chip
                android:layout_width="36dp"
                android:layout_height="36dp"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Sa"
                android:includeFontPadding="false"
                android:textAlignment="center"
                app:chipBackgroundColor="@drawable/chip_background"
                app:chipCornerRadius="48dp"
                app:chipMinHeight="48dp"
                app:textStartPadding="0dp"
                app:textEndPadding="0dp"
                app:chipEndPadding="0dp"
                app:chipStartPadding="0dp"
                app:chipMinTouchTargetSize="0dp"/>

            <com.google.android.material.chip.Chip
                android:layout_width="36dp"
                android:layout_height="36dp"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Su"
                android:includeFontPadding="false"
                android:textAlignment="center"
                app:chipBackgroundColor="@drawable/chip_background"
                app:chipCornerRadius="48dp"
                app:chipMinHeight="48dp"
                app:textStartPadding="0dp"
                app:textEndPadding="0dp"
                app:chipEndPadding="0dp"
                app:chipStartPadding="0dp"
                app:chipMinTouchTargetSize="0dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>