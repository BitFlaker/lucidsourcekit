<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.Goals">

    <TextView
        android:id="@+id/txt_goals_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="Goals"
        android:textColor="?attr/primaryTextColor"
        android:textSize="20sp"
        android:textStyle="bold"
        android:minHeight="48dp"
        android:gravity="center_vertical" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add_journal_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_spinner"
        android:backgroundTint="?attr/colorPrimary"
        android:src="@drawable/ic_round_mode_edit_24"
        app:borderWidth="0dp"
        app:tint="?attr/colorOnPrimary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_goals_heading"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="?attr/backgroundColor"
                app:cardCornerRadius="@dimen/cardRadius"
                app:cardElevation="1dp"
                app:strokeColor="?attr/slightElevated"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <com.bitflaker.lucidsourcekit.charts.Speedometer
                        android:id="@+id/som_difficulty"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp" />

                    <!--                    Look out for the following situations throughout the day to train your awareness -->

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="40dp"
                        android:background="@drawable/small_rounded_rectangle"
                        android:backgroundTint="#1A4DB6AC"
                        android:padding="8dp"
                        android:text="Below are some metrics that compare today's goals to the average of the past few days"
                        android:textColor="?attr/colorSecondary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:divider="@drawable/divider_medium"
                        android:orientation="horizontal"
                        android:showDividers="middle">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <!-- TODO: calculate dateset difficulty: db contains 10 easy, 5 medium and 3 tough ones and you get 2 tough ones and 1 medium it would be -->

                            <!--    10*1 + 5*2 + 3*3 = 29
                                    29 / 18 = 1,611111...
                                    2*3 + 1*2 = 8
                                    8 / 3 = 2,6666666...
                                    100 * 2,666666... / 1,611111... = 165,5172%
                                        => 165,52 %
                            -->

                            <ImageView
                                android:id="@+id/img_selection_diff_comparison"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_above="@+id/txt_selection_diff_desc"
                                android:layout_alignParentTop="true"
                                android:layout_marginEnd="3dp"
                                android:layout_marginBottom="-6dp"
                                android:layout_toStartOf="@+id/ll_selection_diff_comparison"
                                android:src="@drawable/ic_round_arrow_downward_24"
                                app:tint="?attr/colorSecondaryVariant" />

                            <LinearLayout
                                android:id="@+id/ll_selection_diff_comparison"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txt_current_selection_diff_full"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif"
                                    android:text="165"
                                    android:textColor="?attr/primaryTextColor"
                                    android:textSize="26sp" />

                                <TextView
                                    android:id="@+id/txt_current_selection_diff_part"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=".5 %"
                                    android:textColor="?attr/secondaryTextColor"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/txt_selection_diff_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ll_selection_diff_comparison"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="8dp"
                                android:text="Selection difficulty"
                                android:textAlignment="center"
                                android:textColor="?attr/secondaryTextColor"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <!-- TODO: calculate occurrence frequency: 58 times a dataset of 3 records each was shown already => 174, each now selected entry gets checked and calcs: -->

                            <!--    174 total selections
                                    goal 1: 5x
                                    goal 2: 2x
                                    goal 3: 7x
                                    goal total: 14x
                                    => 14 * 100 / 174 = 8,045977
                                    => 8,046 %
                            -->

                            <ImageView
                                android:id="@+id/img_occ_freq_comparison"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_above="@+id/txt_occurrence_freq_description"
                                android:layout_alignBottom="@+id/ll_occurrence_freq_comparison"
                                android:layout_alignParentTop="true"
                                android:layout_marginEnd="3dp"
                                android:layout_marginBottom="-6dp"
                                android:layout_toStartOf="@+id/ll_occurrence_freq_comparison"
                                android:src="@drawable/ic_round_arrow_downward_24"
                                app:tint="?attr/colorSecondaryVariant" />

                            <LinearLayout
                                android:id="@+id/ll_occurrence_freq_comparison"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txt_occurrence_freq_full"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="8"
                                    android:textColor="?attr/primaryTextColor"
                                    android:textSize="26sp" />

                                <TextView
                                    android:id="@+id/txt_occurrence_freq_part"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=".46 %"
                                    android:textColor="?attr/secondaryTextColor"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/txt_occurrence_freq_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ll_occurrence_freq_comparison"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="8dp"
                                android:text="Occurrence frequency"
                                android:textAlignment="center"
                                android:textColor="?attr/secondaryTextColor"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="?attr/slightElevated"
                app:cardCornerRadius="@dimen/cardRadius"
                app:cardElevation="1dp"
                app:strokeColor="?attr/slightElevated"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle"
                        android:backgroundTint="?attr/slightElevated"
                        android:orientation="horizontal"
                        android:paddingStart="20dp"
                        android:paddingTop="6dp"
                        android:paddingEnd="6dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="-0dp"
                            android:layout_marginRight="-48dp"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text="Toady's goals"
                            android:textColor="?attr/primaryTextColor"
                            android:textSize="18sp" />

                        <ImageButton
                            android:id="@+id/btn_reshuffle_goals"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ripple_round"
                            android:src="@drawable/ic_baseline_shuffle_24"
                            app:backgroundTint="?attr/slightElevated" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/rectangle"
                        android:backgroundTint="?attr/slightElevated" />

                    <LinearLayout
                        android:id="@+id/ll_current_goals_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:button="@drawable/checkbox_button"
                            android:drawableLeft="@android:color/transparent"
                            android:drawablePadding="15dp"
                            android:drawableTint="@color/transparent"
                            android:text="I see a yellow car"
                            android:textColor="@color/checkbox_text_check_change"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:button="@drawable/checkbox_button"
                            android:drawableLeft="@android:color/transparent"
                            android:drawablePadding="15dp"
                            android:drawableTint="@color/transparent"
                            android:text="I turn off a light"
                            android:textColor="@color/checkbox_text_check_change"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:button="@drawable/checkbox_button"
                            android:drawableLeft="@android:color/transparent"
                            android:drawablePadding="15dp"
                            android:drawableTint="@color/transparent"
                            android:text="I feel tired"
                            android:textColor="@color/checkbox_text_check_change"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="0dp"
                        android:background="@drawable/medium_rounded_rectangle"
                        android:backgroundTint="?attr/slightElevated2x" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_adjust_algorithm"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="?attr/slightElevated"
                        android:drawableEnd="@drawable/ic_round_keyboard_arrow_right_24"
                        android:drawableTint="?attr/secondaryTextColor"
                        android:fontFamily="sans-serif"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:minHeight="58dp"
                        android:paddingStart="20dp"
                        android:text="Adjust Algorithm"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        app:cornerRadius="0dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- TODO: probably hide if it's the first day of using this tool -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="Yesterday's Stats"
                android:textColor="?attr/primaryTextColor"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="The statistics about your goals yesterday"
                android:textColor="?attr/secondaryTextColor"
                android:textSize="14sp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="?attr/slightElevated"
                app:cardCornerRadius="@dimen/cardRadius"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/ic_baseline_check_24"
                        app:tint="?attr/tertiaryTextColor" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="Goals Achieved"
                            android:textColor="?attr/primaryTextColor"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="sans-serif"
                            android:text="The percentage of goals you successfully achieved yesterday. The higher the percentage, the better your awareness. You have successfully achieved 2 out of 3 goals that day."
                            android:textColor="?attr/secondaryTextColor"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_ygoals_achieved"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:text="66"
                                android:textColor="?attr/primaryTextColor"
                                android:textSize="28sp" />

                            <TextView
                                android:id="@+id/txt_ygoals_achieved_part"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:fontFamily="sans-serif"
                                android:text="%"
                                android:textColor="?attr/secondaryTextColor"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="?attr/slightElevated"
                app:cardCornerRadius="@dimen/cardRadius"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/ic_round_bolt_24"
                        app:tint="?attr/tertiaryTextColor" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="Goals Difficulty"
                            android:textColor="?attr/primaryTextColor"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="sans-serif"
                            android:text="The average difficulty of all yesterday's targets. The higher the value, the more difficult it might have been to encounter or perceive the targets throughout the day."
                            android:textColor="?attr/secondaryTextColor"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_ygoals_difficulty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:text="2.8"
                                android:textColor="?attr/primaryTextColor"
                                android:textSize="28sp" />

                            <TextView
                                android:id="@+id/txt_ygoals_difficulty_part"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:fontFamily="sans-serif"
                                android:text="/3"
                                android:textColor="?attr/secondaryTextColor"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:divider="@drawable/divider_large"
                android:orientation="horizontal"
                android:showDividers="middle">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/slightElevated"
                    app:cardCornerRadius="@dimen/cardRadius"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <RelativeLayout
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:padding="2dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_round_bolt_24"
                                app:tint="?attr/tertiaryTextColor" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:src="@drawable/ic_round_compare_arrows_24"
                                app:tint="?attr/tertiaryTextColor" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Selection\nDifficulty"
                            android:textColor="?attr/primaryTextColor"
                            android:textSize="16sp" />

                        <androidx.legacy.widget.Space
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_ygoals_sel_difficulty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:text="138"
                                android:textColor="?attr/primaryTextColor"
                                android:textSize="28sp" />

                            <TextView
                                android:id="@+id/txt_ygoals_sel_difficulty_part"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:fontFamily="sans-serif"
                                android:text=".5 %"
                                android:textColor="?attr/secondaryTextColor"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="?attr/slightElevated"
                    app:cardCornerRadius="@dimen/cardRadius"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:padding="4dp"
                            android:src="@drawable/ic_round_bar_chart_24"
                            app:tint="?attr/tertiaryTextColor" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Occurrence frequency"
                            android:textColor="?attr/primaryTextColor"
                            android:textSize="16sp" />

                        <androidx.legacy.widget.Space
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_ygoals_occ_freq"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:text="100"
                                android:textColor="?attr/primaryTextColor"
                                android:textSize="28sp" />

                            <TextView
                                android:id="@+id/txt_ygoals_occ_freq_part"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:fontFamily="sans-serif"
                                android:text=".00 %"
                                android:textColor="?attr/secondaryTextColor"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="Advice"
                android:textColor="?attr/primaryTextColor"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Suggestions for improving your performance"
                android:textColor="?attr/secondaryTextColor"
                android:textSize="14sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_goal_advices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
