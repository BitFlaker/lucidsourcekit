<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    app:cardBackgroundColor="?attr/backgroundColor"
    app:cardCornerRadius="@dimen/cardRadius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_text_entry"
            android:layout_width="0dp"
            android:layout_height="128dp"
            android:layout_weight="1"
            android:layout_margin="6dp"
            android:text="Text Dream Journal Entry"
            android:padding="24dp"
            android:drawableTop="@drawable/ic_baseline_text_fields_24"
            android:drawableTint="@color/white"
            android:background="@drawable/ripple_rounded"
            app:backgroundTint="?attr/slightElevated"/>

        <Space
            android:layout_width="8dp"
            android:layout_height="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_forms_entry"
            android:layout_width="0dp"
            android:layout_height="128dp"
            android:layout_weight="1"
            android:padding="24dp"
            android:layout_margin="6dp"
            android:text="Forms Dream Journal Entry"
            android:drawableTop="@drawable/ic_baseline_ballot_24"
            android:drawableTint="@color/white"
            android:background="@drawable/ripple_rounded"
            app:backgroundTint="?attr/slightElevated"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>