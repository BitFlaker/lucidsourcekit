<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/crd_notification_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="@dimen/cardRadius"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorSurfaceContainer"
    app:cardBackgroundColor="?attr/colorSurfaceContainer">

    <TextView
        android:id="@+id/txt_notification_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="16dp"
        android:minHeight="32dp"
        android:gravity="center_vertical"
        android:text="This is a very long example notification message which should not fit within one line or even two lines of this TextView ðŸ˜¯"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</com.google.android.material.card.MaterialCardView>