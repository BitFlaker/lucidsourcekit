<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:height="@dimen/cardRadius">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="@dimen/cardRadius" android:topRightRadius="@dimen/cardRadius"/>
            <solid android:color="?attr/slightElevated"/>
            <stroke android:width="1dp" android:color="#44ffffff" />
        </shape>
    </item>
    <item android:height="204dp" android:top="@dimen/cardRadius">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="?attr/slightElevated"
                android:endColor="?attr/backgroundColor"
                android:angle="270"
                android:type="linear" />
        </shape>
    </item>
    <item android:top="219dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/backgroundColor"/>
        </shape>
    </item>
</layer-list>
