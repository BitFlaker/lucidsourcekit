<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="?attr/tertiaryTextColor"
                android:dashWidth="6dp"
                android:dashGap="4dp"/>
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:top="1dp" android:left="-2dp" android:bottom="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/slightElevated" />
        </shape>
    </item>
</layer-list>