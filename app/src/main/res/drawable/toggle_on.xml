<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#dd3b90e8"
                android:endColor="#dd74329f"
                android:type="linear"
                android:angle="225">
            </gradient>
            <size android:width="24dp"
                android:height="24dp"/>
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="?attr/slightElevated" />
            <corners android:radius="@dimen/cardRadius" />
        </shape>
    </item>
    <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
        <shape android:shape="rectangle" >
            <gradient
                android:startColor="#223b90e8"
                android:endColor="#2274329f"
                android:type="linear"
                android:angle="225" />
            <corners android:radius="@dimen/cardRadius" />
        </shape>
    </item>
</layer-list>